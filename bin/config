module ReadBook

  module ReadBookConfig

    class ConfHash
      attr_reader :h
      def initialize(h)
        @h = h
      end
    end

    def conf
      config = ConfHash.new(
      :dir_base => File.dirname(File.dirname(File.expand_path(__FILE__)).untaint),
      :dir_data =>'mydata',
      :dir_text =>'text',
      :dir_subject =>'data',
      :file_subject =>'items.obj',
      :aws_id=>'midore-22',
      :aws_key=>'0Z6KGH49MFQJQTSPGDG2',
      :count_view=>7
      )
    end

  end

end

$RBCONF = ReadBook::ReadBookConfig